<div class="page-content">
	<div class="row">
		<div class="col-md-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h6 class="card-title">Inputs</h6>
					<%= form_for @profile do |f| %>
						<div class="form-group">
							<%= f.label :First_name %>
							<%= f.text_field :first_name ,:class=>"form-control"%>
						</div>
						<div class="form-group">
							<%= f.label :Last_name %>
							<%= f.text_field :last_name ,:class=>"form-control"%>
						</div>
						<div class="form-group">
							<label for="exampleInputReadonly">Email</label>
							<input type="text" class="form-control" id="exampleInputReadonly" readonly value= <%= current_user.email %> />
						</div>
						<div class="form-group">
							<%= f.label :Sex %>
							<%= f.select :sex ,['Male','Female','Others'] ,:prompt=> 'select one',:class => 'form-control'%>
						</div>
						<div class="form-group">
							<%= f.label :bithdate %>	
							<div class="input-group date datepicker" id="datePickerExample">
								<%= f.text_field :birthdate ,:class=>"form-control"%><span class="input-group-addon"><i data-feather="calendar"></i></span>
							</div>
						</div>
						<div class="form-group">
							<%= f.label :About_me %>
							<%= f.text_area :about_me ,:class=>"form-control", :rows=>'5'%>
						</div>
						<%= f.submit "Submit" ,:class=> "btn btn-primary"%>
					<%end%>
					<div class="mb-4 mb-md-0 mt-3">
						<a href="<%= profiles_upload_path %>" class="btn btn-outline-primary download">Upload Image</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
