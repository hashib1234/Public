<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<body>
    <!-- Start Preloader -->
    <!-- <div id="preload-block">
      <div class="square-block"></div>
    </div> -->
    <!-- Preloader End -->
    
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-8 col-lg-offset-4 col-md-offset-3 col-sm-offset-2">
          <!-- brand-logo start -->
          <div class="brand-logo text-center">
           
          </div><!-- ./brand-logo -->
          <!-- authfy-login start -->
          <div class="authfy-login">
            <!-- panel-login start -->
            <div class="authfy-panel panel-login text-center active">
              <div class="authfy-heading">
                <h3 class="auth-title">Login to your account</h3>
                <p>Donâ€™t have an account? <%= link_to "Sign Up Free!", new_registration_path(resource_name) %></p>
              </div>
              <!-- social login buttons start -->
              <div class="row social-buttons">
                <div class="col-xs-4 col-sm-4">
                 <%= link_to  omniauth_authorize_path(resource_name,"facebook") ,:class => "btn btn-lg btn-block btn-facebook" do %>
                    <i class="fa fa-facebook"></i>
                  <%end%> 
                </div>
                <div class="col-xs-4 col-sm-4">
                  <%= link_to  omniauth_authorize_path(resource_name,"twitter") ,:class => "btn btn-lg btn-block btn-twitter" do %>
                    <i class="fa fa-twitter"></i>
                  <%end%> 
                </div>
                <div class="col-xs-4 col-sm-4">
                  <%= link_to  omniauth_authorize_path(resource_name,"google_oauth2") ,:class => "btn btn-lg btn-block btn-google", :name => "google" do %>
                    <i class="fa fa-google"></i>
                  <%end%> 
                </div>
              </div><!-- ./social-buttons -->
              <div class="row loginOr">
                <div class="col-xs-12 col-sm-12">
                  <hr class="hrOr">
                  <span class="spanOr">or</span>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12 col-sm-12">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <%= f.text_field :login, autofocus: true, autocomplete: "email" , class: "form-control email", placeholder: "Email Address or Phone" %>
                    <div class="pwdMask">
                      <%= f.password_field :password, autocomplete: "current-password" , class: "form-control password", placeholder: "Password" %>
                      <span class="fa fa-eye-slash pwd-toggle"></span>
                    </div>

                    <div class="row remember-row">
                      <div class="col-xs-6 col-sm-6">
                        <label class="checkbox text-left">
                          <input type="checkbox" value="remember-me"><span class="label-text">Remember me</span>
                        </label>
                      </div>
                      <div class="col-xs-6 col-sm-6">
                        <p class="forgotPwd">
                          
                        </p>
                      </div>
                    </div> <!-- ./remember-row -->
                    <div class="form-group">
                     <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block",name: "submit_btn", value: "Login"%>
                    </div>
                     <div class="row loginOr">
                
              </div>
                     
                  <% end %>
                  
                 
                </div>
              </div>
            </div> <!-- ./panel-login -->
          </div>
        </div>
      </div>
    </div>
  </body>