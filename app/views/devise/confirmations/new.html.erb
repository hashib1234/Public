<div class="container-fluid">
  <div class="row">
    <div class="col-lg-4 col-md-6 col-sm-8 col-lg-offset-4 col-md-offset-3 col-sm-offset-2">
      <div class="brand-logo text-center">
        <%= image_tag "brand-logo.png", :width => "120" ,:alt=> "brand-logo" %>
      </div>
      <div class="authfy-login">
        <div class="authfy-panel panel-forgot active">
          <div class="row">
            <div class="col-xs-12 col-sm-12">
              <div class="authfy-heading">
                <h3 class="auth-title"> Resend confirmation instructions </h3>
              </div>
              <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control email", placeholder: "Email Address" ,value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)%>
                </div>
                  <div class="form-group">
                  <div class="pwdMask">
                    <%= f.password_field :password_confirmation, class: "form-control password", placeholder: "Password Confirm" %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.submit "Resend confirmation instructions", class: "btn btn-lg btn-primary btn-block" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
